pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                checkout scm
                script {
                    sh 'composer install'
                    sh 'php artisan migrate'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'rsync -avz --exclude=".git" /path/to/your-laravel-repo/ user@your-ec2-ip:/path/to/remote/dir'
                    sh 'ssh user@your-ec2-ip "cd /path/to/remote/dir && php artisan config:cache"'
                }
            }
        }
    }
}
